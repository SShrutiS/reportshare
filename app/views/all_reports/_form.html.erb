
<%= form_with(model: all_report, local: true , html: {multipart: true}) do |form| %>
  <% if @report.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(report.errors.count, "error") %> prohibited this report from being saved:</h2>

      <ul>
      <% report.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


    <div class="col-4" "overflow:auto;">
      <div class="form-group" style="font-weight:bold">
        <%= form.label :name %>
        <%= form.text_field :name, id: :name %>
      </div>

      <div class="form-group" style="font-weight:bold">
        <%= form.label :yrmnth %>
        <%= form.text_field :yrmnth, id: :yrmnth %>
      </div>

      <div class="form-group" style="font-weight:bold">
        <%= form.label :file %>
        <%= form.file_field :file, id: :file %>
      </div>

      <div class="form-group" style="font-weight:bold">
        <%= form.label :link %>
        <%= form.url_field :link, id: :report_link  %>
      </div>  
      
      <div class="form-group" style="font-weight:bold">
        <%= form.label :approval %>

        <%= form.select(:approval, options_for_select(@approval), {}) %>
      </div>

      
      <div class="form-group" style="font-weight:bold">
        <%= form.label :comment %>
        <%= form.text_area :comment, id: :report_comment %>
      </div>
      
      <div class="actions" style="font-weight:bold">
        <%= form.submit  class: 'btn btn-outline-primary'%>
      </div>
    </div>

<% end %>



